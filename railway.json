{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "paths": ["backend"]
    }
  },
  "deploy": {
    "startCommand": "cd backend && java -Dserver.port=$PORT -jar target/backend-0.0.1-SNAPSHOT.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
